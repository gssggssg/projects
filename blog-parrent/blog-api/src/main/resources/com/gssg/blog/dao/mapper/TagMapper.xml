<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gssg.blog.dao.mapper.TagMapper">

    <!-- List<Tag> findTagsByArticleId(Long articleId); -->
    <select id="findTagsByArticleId" parameterType="long" resultType="com.gssg.blog.dao.pajo.Tag">
        SELECT id, avatar, tag_name as tagName FROM ms_tag WHERE id in (SELECT tag_id FROM ms_article_tag WHERE article_id = #{articleId})
    </select>

    <!-- List<Tag> findHotsTagIds(int limit); -->
    <select id="findHotsTagIds" parameterType="int" resultType="java.lang.Long">
        SELECT tag_id
        FROM ms_article_tag
        GROUP BY tag_id
        ORDER BY COUNT(*) DESC LIMIT #{limit}
    </select>

    <!-- List<Tag> tagList = tagMapper.findTagsByTagIds(tagIds); -->
    <select id="findTagsByTagIds" parameterType="list" resultType="com.gssg.blog.dao.pajo.Tag">
        SELECT id,tag_name as tagName FROM ms_tag
        WHERE id IN
        <foreach collection="tagIds" item="tagId" separator="," open="(" close=")">
            #{tagId}
        </foreach>
    </select>
</mapper>